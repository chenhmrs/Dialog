<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.wellwang.myapplication.MainActivity">
        <Button
            android:id="@+id/button_dialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DialogActivity"/>
        <Button
            android:id="@+id/button_dialog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ExtendsDialog"/>
        <Button
            android:id="@+id/button_dialog3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ExtendsDialogFragment"/>
        <Button
            android:text="ExtendsDialogFragmentAlertDialog"
            android:id="@+id/button_dialog4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BottomSheet"/>
        <Button
            android:id="@+id/dialogfragment_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CustomBottomSheetDialogFragment"/>
    </LinearLayout>
       <!-- 下面这个布局 就是我们的底部菜单-->
    <include layout="@layout/bottom_sheet"/>

</android.support.design.widget.CoordinatorLayout>